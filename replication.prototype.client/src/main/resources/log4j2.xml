<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="ConsoleRoot" target="SYSTEM_OUT">
			<PatternLayout
				pattern="Root: %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="CommitFileLogger" fileName="commits.log" append="false">
			<XMLLayout complete="true" charset="UTF-8" compact="false" />
			<MarkerFilter marker="LATENCY" onMatch="ACCEPT"
				onMismatch="DENY" />
		</File>
		<File name="ErrorFileLogger" fileName="errors.log">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />

		</File>
	</Appenders>
	<Loggers>
		<Root level="info" additivity="false">
			<AppenderRef ref="ConsoleRoot" />
		</Root>
		<Logger name="replication.prototype.client" level="DEBUG"
			additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="CommitFileLogger" />
		</Logger>
	</Loggers>
</Configuration>